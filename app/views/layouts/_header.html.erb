<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("logo"), "#", id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("navbar.home"), static_pages_home_path %></li>
        <li><%= link_to t("navbar.help"), static_pages_help_path %></li>
        
        <% if logged_in? %>
          <li><%= link_to t("users"), users_path %></li>
          <li class="dropdown">
            <%= link_to "#", id: "account", class: "dropdown-toggle", data: { toggle: "dropdown" } do %>
              <%= t("account") %>
              <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu" id="dropdown-menu">
              <li><%= link_to t("profile"), user_path(current_user) %></li>
              <li><%= link_to t("settings"), edit_user_path(current_user) %></li> 
              <li class="divider"></li>
              <li><%= link_to t("logout"), logout_path, data: { "turbo-method": :delete } %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
